% layout 'yancy/auth';
<main id="app" class="container-fluid">
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <h1>Login</h1>
            % if ( stash 'login_failed' ) {
            <div class="login-error alert alert-danger" role="alert">
                Login failed: User or password incorrect!
            </div>
            % }
            %= $plugin->login_form( $c )
        </div>
    </div>
</main>

